<input type="text" id="email" placeholder="email">
<input type="password" id="password" placeholder="password">
<button id="loginButton">Login</button>

<script>
    $("#loginButton").on("click", function(e){
        e.preventDefault();

        let email = $("#email").val();
        let password = $("#password").val();

        $.ajax("/login", {
            type: "POST",
            data: {
                email: email,
                password: password
            }
        }).then(function(res){
            console.log(res);
            res.redirect("/user");
        })
    })


</script>