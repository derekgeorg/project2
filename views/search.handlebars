<script>
    $(document).ready(function(){

        $("#searchSubmit").on("click", function(e){
            e.preventDefault();

            let type = $("#petType").val();
            let color = $("#petColor").val();
            let sex = $("#petSex").val();

            $.ajax("/api/search", {
                type: "GET",
                data: {
                    type: type,
                    color: color,
                    sex: sex
                }
            }).then(function(res){
                console.log(res);
            });
        });

        $("#logout").on("click", function(e){
            e.preventDefault();

            $.ajax("/logout", {
                type: "GET"
            }).then(function(){
                location.reload();
                console.log("You are no longer signed in")
            });
        });
    });


</script>
